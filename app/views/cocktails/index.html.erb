<div class="container text-center mt-5">
  <h1>Cocktails</h1>
  <br>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="card p-5 mx-2 my-2">
        <div class="card-description">
          <h2><%= cocktail.name %></h2>
        </div>
        <%= link_to "View", cocktail_path(cocktail), class: "card-link" %>
      </div>
    <% end %>
  </div>
  <h4 class="text-center mt-5"><%= link_to 'Add a new cocktail', new_cocktail_path %>
</div>
      